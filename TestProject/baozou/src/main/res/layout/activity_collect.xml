<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.qf.administrator.baozou.activity.CollectActivity">
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="?attr/colortoolbar">

        <ImageView
            android:id="@+id/img_opendraw"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/abc_ic_ab_back_mtrl_am_alpha" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:layout_toRightOf="@id/img_opendraw"
            android:text="收藏"
            android:textColor="#fff"
            android:textSize="22sp" />

        </RelativeLayout>
    <TextView
        android:layout_centerInParent="true"
        android:textColor="#dfdddd"
        android:id="@+id/tv_hint"
        android:text="登录后才能查看我的收藏"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
