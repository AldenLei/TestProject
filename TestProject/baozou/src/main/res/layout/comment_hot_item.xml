<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/ll_comment_item_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.qf.administrator.baozou.views.CircleImageView
            android:id="@+id/cv_comment_item_icon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:border_width="0dp"
            app:border_color="@color/background_white"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/tv_comment_item_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="name"
            android:textColor="@color/tv_comment_name"
            android:textSize="15sp"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_comment_item_content"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="评论内容"
        android:textColor="@color/tv_comment_content"
        android:textSize="14sp"
        android:layout_marginLeft="40dp"/>

    <RelativeLayout
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_comment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/tv_bz_login_hint_color"
            android:text="2017-10-10"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ig_comment_reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/btn_article_reply_nor"/>
            <TextView
                android:id="@+id/tv_comment_reply"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/tv_bz_login_hint_color"
                android:text="回复" />
            <ImageView
                android:layout_marginLeft="10dp"
                android:id="@+id/ig_comment_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/btn_article_like_nor"/>
            <TextView
                android:id="@+id/tv_comment_like_num"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/tv_bz_login_hint_color"
                android:text="赞"/>
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/tv_bz_login_hint_color"/>
</LinearLayout>