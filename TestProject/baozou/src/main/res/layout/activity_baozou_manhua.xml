<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_baozou_manhua"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_white"
    tools:context="com.qf.administrator.baozou.activity.BaozouManhuaActivity">
    <RelativeLayout
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/backgroud_red"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ig_self_menu"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:src="@drawable/yyb_appdetail_showmore" />

        <ImageView
            android:id="@+id/ig_self_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_back_dark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/ig_self_back"
            android:text="暴走漫画"
            android:textColor="#fff"
            android:textSize="21sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_baozou_prom"
            android:layout_centerHorizontal="true"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@drawable/baozou_login_btn"
            android:visibility="gone"
            android:text="请输入用户名"/>
        <EditText
            android:id="@+id/ed_acount"
            android:layout_width="match_parent"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_height="40dp"
            android:textColorHint="@color/tv_bz_login_hint_color"
            android:textCursorDrawable="@drawable/login_cursor"
            android:background="@null"
            android:textSize="16sp"
            android:hint="暴走漫画账号"/>
        <View
            android:layout_below="@id/ed_acount"
            android:layout_width="match_parent"
            android:background="@color/tv_bz_login_hint_color"
            android:layout_height="1px"/>

        <EditText
            android:id="@+id/ed_psw"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColorHint="@color/tv_bz_login_hint_color"
            android:inputType="textPassword"
            android:hint="密码"
            android:textSize="16sp"
            android:background="@null"
            android:layout_below="@+id/ed_acount"
            android:textCursorDrawable="@drawable/login_cursor"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <View
            android:layout_below="@id/ed_psw"
            android:layout_width="match_parent"
            android:background="@color/tv_bz_login_hint_color"
            android:layout_height="1px"/>
    </RelativeLayout>

    <Button
        android:id="@+id/btn_bz_login"
        android:layout_marginTop="30dp"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/background_white"
        android:text="登录"
        android:textSize="16sp"
        android:background="@drawable/login_button"
        />
</LinearLayout>
