<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_white"
    tools:context="com.qf.administrator.baozou.activity.Self_Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/bar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/backgroud_red"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ig_self_menu"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/yyb_appdetail_showmore" />

            <ImageView
                android:id="@+id/ig_self_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_back_dark" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/ig_self_back"
                android:text="个人"
                android:textColor="#fff"
                android:textSize="21sp" />
        </RelativeLayout>

        <com.qf.administrator.baozou.views.CircleImageView
            android:id="@+id/img_head"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@id/bar"
            app:border_color="@color/background_white"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:src="@mipmap/avatar_feedback" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_head"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="点击登录"
            android:textColor="@color/tv_self_login_color"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/lo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name"
            android:layout_marginTop="20dp">
            <LinearLayout
                android:id="@+id/ll_shoucang"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/shouCang_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0"
                    android:textColor="@color/tv_self_number_color"
                    android:textSize="16sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收藏"
                    android:textColor="@color/tv_self_spyt_color"
                    android:textSize="16sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_pinglun"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/pingLun_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0"
                    android:gravity="center"
                    android:textColor="@color/tv_self_number_color"
                    android:textSize="16sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="评论"
                    android:textColor="@color/tv_self_spyt_color"
                    android:textSize="16sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_yuedu"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView

                    android:id="@+id/yueDu_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0"
                    android:gravity="center"
                    android:textColor="@color/tv_self_number_color"
                    android:textSize="16sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="阅读"
                    android:textColor="@color/tv_self_spyt_color"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_tougao"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tougao_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0"
                    android:gravity="center"
                    android:textColor="@color/tv_self_number_color"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="投稿"
                    android:textColor="@color/tv_self_spyt_color"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/lo2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lo"
            android:background="@color/color_Light_text_backGray"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="每日任务" />

            <TextView
                android:id="@+id/tv_mission_pro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/tv_self_missionpro_color"
                android:layout_marginRight="14dp"
                android:text="任务介绍" />

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/fragment_news_go_icon" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/lo3"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:padding="10dp"
            android:layout_below="@+id/lo2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:id="@+id/img_sign"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:src="@drawable/self_sign" />

            <TextView
                android:id="@+id/tv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/img_sign"
                android:text="每日签到"
                android:textColor="@color/tv_self_mission_text_color" />

            <ImageView
                android:id="@+id/img_coin"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignLeft="@id/tv_1"
                android:layout_below="@id/tv_1"
                android:layout_marginTop="10dp"
                android:src="@drawable/img_coin_mini" />

            <TextView
                android:id="@+id/tv_22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/img_coin"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@id/img_coin"
                android:text="+"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/sign_Coin_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/img_coin"
                android:layout_toRightOf="@id/tv_22"
                android:text="5至15"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_self_isDone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/tv_mission_complete_color"
                android:text="未完成" />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/lo3"
            android:layout_marginLeft="10dp"
            android:background="@color/color_Light_text_backGray" />

        <RelativeLayout
            android:id="@+id/lo4"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@id/lo3"
            android:padding="10dp">

            <ImageView
                android:id="@+id/img_article"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:src="@drawable/self_article" />

            <TextView
                android:id="@+id/tv_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/img_article"
                android:text="阅读文章"
                android:textColor="@color/tv_self_mission_text_color" />

            <ImageView
                android:id="@+id/img_coin2"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignLeft="@id/tv_2"
                android:layout_below="@id/tv_2"
                android:layout_marginTop="5dp"
                android:src="@drawable/img_coin_mini" />

            <TextView
                android:id="@+id/tv_222"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/img_coin2"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@id/img_coin2"
                android:text="+"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/sign_Coin_num2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/img_coin2"
                android:layout_toRightOf="@id/tv_222"
                android:text="15"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/isDone_article"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/tv_mission_complete_color"
                android:text="未完成" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/lo4"
            android:layout_marginLeft="10dp"
            android:background="@color/color_Light_text_backGray" />

        <RelativeLayout
            android:id="@+id/lo5"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@id/lo4"
            android:padding="10dp">

            <ImageView
                android:id="@+id/img_comment"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:src="@drawable/self_comment" />

            <TextView
                android:id="@+id/tv_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/img_comment"
                android:text="发表评论"
                android:textColor="@color/tv_self_mission_text_color" />

            <ImageView
                android:id="@+id/img_coin3"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignLeft="@id/tv_3"
                android:layout_below="@id/tv_3"
                android:layout_marginTop="5dp"
                android:src="@drawable/img_coin_mini" />

            <TextView
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/img_coin3"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@id/img_coin3"
                android:text="+"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/sign_Coin_num3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/img_coin3"
                android:layout_toRightOf="@id/tv_num"
                android:text="15"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/isDone_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/tv_mission_complete_color"
                android:text="未完成" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/lo5"
            android:layout_marginLeft="10dp"
            android:background="@color/color_Light_text_backGray" />

        <RelativeLayout
            android:id="@+id/lo6"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@id/lo5"
            android:padding="10dp">

            <ImageView
                android:id="@+id/img_like"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:src="@drawable/self_article_like" />

            <TextView
                android:id="@+id/tv_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/img_like"
                android:text="点赞文章"
                android:textColor="@color/tv_self_mission_text_color" />

            <ImageView
                android:id="@+id/img_coin4"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignLeft="@id/tv_4"
                android:layout_below="@id/tv_4"
                android:layout_marginTop="5dp"
                android:src="@drawable/img_coin_mini" />

            <TextView
                android:id="@+id/tv_num2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/img_coin4"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@id/img_coin4"
                android:text="+"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/sign_Coin_num4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/img_coin4"
                android:layout_toRightOf="@id/tv_num2"
                android:text="15"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/isDone_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/tv_mission_complete_color"
                android:text="未完成" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/lo6"
            android:layout_marginLeft="10dp"
            android:background="@color/color_Light_text_backGray" />

        <RelativeLayout
            android:id="@+id/lo7"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@id/lo6"
            android:padding="10dp">

            <ImageView
                android:id="@+id/img_like_comment"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:src="@drawable/self_comment_like" />

            <TextView
                android:id="@+id/tv_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/img_like_comment"
                android:text="点赞评论"
                android:textColor="@color/tv_self_mission_text_color" />

            <ImageView
                android:id="@+id/img_coin5"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignLeft="@id/tv_5"
                android:layout_below="@id/tv_5"
                android:layout_marginTop="5dp"
                android:src="@drawable/img_coin_mini" />

            <TextView
                android:id="@+id/tv_num3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/img_coin5"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@id/img_coin5"
                android:text="+"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/sign_Coin_num11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/img_coin5"
                android:layout_toRightOf="@id/tv_num3"
                android:text="15"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/isDone_like_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/tv_mission_complete_color"
                android:text="未完成" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/lo7"
            android:layout_marginLeft="10dp"
            android:background="@color/color_Light_text_backGray" />

        <RelativeLayout
            android:id="@+id/lo8"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@id/lo7"
            android:padding="10dp">

            <ImageView
                android:id="@+id/img_share"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:src="@drawable/self_share" />

            <TextView
                android:id="@+id/tv_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/img_share"
                android:text="分享文章"
                android:textColor="@color/tv_self_mission_text_color" />

            <ImageView
                android:id="@+id/img_coin6"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignLeft="@id/tv_6"
                android:layout_below="@id/tv_6"
                android:layout_marginTop="5dp"
                android:src="@drawable/img_coin_mini" />

            <TextView
                android:id="@+id/tv_num6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/img_coin6"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@id/img_coin6"
                android:text="+"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/share_Coin_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/img_coin6"
                android:layout_toRightOf="@id/tv_num6"
                android:text="15"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/isDone_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/tv_mission_complete_color"
                android:text="未完成" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_below="@id/lo8"
            android:background="@color/color_Light_text_backGray" />

        <RelativeLayout
            android:id="@+id/lo9"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_below="@id/lo8"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="任务完成提示"
                android:layout_centerVertical="true"
                android:textColor="@color/color_Light_text_black" />

            <ImageView
                android:id="@+id/ig_self_off"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:visibility="gone"
                android:src="@drawable/toggle_off" />

            <ImageView
                android:id="@+id/ig_self_on"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/toggle_on"
                android:visibility="visible" />
        </RelativeLayout>



    </RelativeLayout>

</ScrollView>
