<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="280dp"
    android:background="#fff"
    android:layout_marginBottom="10dp">

    <fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard
        android:id="@+id/custom_videoplayer_standard"
        android:layout_width="match_parent"

        android:layout_height="200dp" />

    <TextView
        android:id="@+id/tv_video_title"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:textColor="#4d4c4c"
        android:text="美女也野兽" />

    <RelativeLayout
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_video_palycount"
            android:layout_centerVertical="true"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="193 播放" />

        <ImageView
            android:id="@+id/img_video_share"
            android:layout_marginStart="50dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/btn_article_share" />

        <ImageView
            android:id="@+id/img_video_message"
            android:layout_toLeftOf="@id/img_video_share"
            android:layout_marginStart="40dp"
            android:layout_centerVertical="true"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/btn_article_reply_nor" />

        <TextView
            android:id="@+id/tv_video_comment"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/img_video_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="评论" />

        <ImageView
            android:id="@+id/img_video_like"
            android:layout_toLeftOf="@id/img_video_message"
            android:layout_centerVertical="true"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/btn_article_like_nor" />

        <TextView
            android:id="@+id/tv_video_vote"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/img_video_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="赞" />
    </RelativeLayout>
</LinearLayout>